
<li>
<div class="row">
	<div class="col-md-6 desc-txt">
  		{{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}} {{/link-to}}
  	</div>
  	<div class="col-md-2">
  		{{#if isImageShowing}}
    		<p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}></p>
  		{{else}}
    		<button class="btn btn-info" {{action 'imageShow'}}><i class="fa fa-eye" aria-hidden="true"></i>  Image</button>
  		{{/if}}
  	</div>
  	<div class="col-md-2">
  		{{rental-popularity rental}}
  	</div>
  	<div class="col-md-2">
  		{{rental-cost rental}}
  	</div>
 </div>
</li>